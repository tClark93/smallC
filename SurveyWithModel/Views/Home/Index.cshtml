<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
</head>
@using SurveyWithModel.Models
@model Ninja
<body style="padding: 50px;">
    <div class="container" style="margin:25px; padding:50px; border: 1px solid black;">
        <form action='create' method='post'>
            <div class="form-group">
                <span asp-validation-for="Name"></span>
                <label for="Name">Name:</label>
                <input type="text" class="form-control" asp-for="Name">
            </div>
            <div class="form-group">
                <span asp-validation-for="Location"></span>
                <label for="Location">Dojo Location:</label>
                <input type="text" class="form-control" asp-for="Location">
            </div>
            <div class="form-group">
                <span asp-validation-for="Language"></span>
                <label for="Language">Favorite Language:</label>
                <input type="text" class="form-control" asp-for="Language">
            </div>
            <div class="form-group">
                <span asp-validation-for="Comment"></span>
                <label for="Comment">Additional Comments:</label>
                <textarea class="form-control" name='Comment' rows="6" cols="50" asp-for="Comment">
                </textarea>
            </div>
            <button type='submit' value='Submit' class="btn btn-warning">Submit</button>
        </form>  
    </div>
</body>
</html>