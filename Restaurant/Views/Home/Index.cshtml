<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
@model Review
<body>
    <div class="wrapper">
        <h1>Write a new Review:</h1>
        <form action="create" method="POST">
            <div class="main">
                <div class="left">
                    <div>
                        <div class="inp form-group">
                            <span asp-validation-for="Reviewer"></span>
                            <label class="col-sm-2 control-label">Reviewer Name:</label>
                            <div class="col-sm-10">
                                <input asp-for="Reviewer" name="Reviewer" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="inp form-group">
                            <span asp-validation-for="Restaurant"></span>
                            <label class="col-sm-2 control-label">Establishment Name:</label>
                            <div class="col-sm-10">
                                <input asp-for="Restaurant" name="Restaurant" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="inp form-group">
                            <span asp-validation-for="Content"></span>
                            <label class="col-sm-2 control-label">Review:</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Content" name="Content" class="form-control" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="inp form-group">
                            <span asp-validation-for="Date"></span>
                            <label class="col-sm-2 control-label">Date:</label>
                            <div class="col-sm-10">
                                <input asp-for="Restaurant" name="Date" type="date" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Stars:</label>
                        <div class="col-sm-10">
                            <select name="Stars">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>